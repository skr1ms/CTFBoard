{
  "uid": "backend-logs",
  "title": "Backend Logs",
  "tags": ["backend", "logs", "loki"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Error Logs",
      "type": "logs",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 12},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "loki"},
          "queryType": "",
          "refId": "A",
          "expr": "{container=\"backend\"} |~ \"(?i)(error|err)\""
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      }
    },
    {
      "id": 2,
      "title": "Slow Requests (>500ms)",
      "type": "logs",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 24},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "loki"},
          "queryType": "",
          "refId": "A",
          "expr": "{container=\"backend\"} |~ \"latency_ms.*[5-9][0-9][0-9]|latency_ms.*[0-9]{4,}\""
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      }
    },
    {
      "id": 3,
      "title": "All Backend Logs",
      "type": "logs",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "loki"},
          "queryType": "",
          "refId": "A",
          "expr": "{container=\"backend\"}"
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      }
    }
  ],
