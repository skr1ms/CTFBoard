      "id": 7,
      "title": "System CPU Usage",
      "type": "gauge",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{id=\"/\"}[1m])) * 100",
